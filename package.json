{
  "name": "telegram-bot-vercel-boilerplate",
  "version": "1.1.0",
  "description": "Telegram Bot Vercel Boilerplate",
  "main": "src/index.ts",
  "author": "Mark Pavlov (https://github.com/sollidy)",
  "homepage": "https://github.com/sollidy/telegram-bot-vercel-boilerplate",
  "scripts": {
    "dev": "dotenv -- nodemon -e ts -x \"bun scripts/generate-glob.ts && ts-node src/index.ts\"",
    "type-check": "tsc --noEmit src/index.ts",
    "test": "nodemon -e ts -x ts-node src/actions/html-to-image/index.ts",
    "devWindows": "@powershell -Command $env:DEBUG='bot*';dotenv -- -- nodemon -e ts -x ts-node src/index.ts",
    "build": "ncc build scripts/vercel.ts -o public -m",
    "build:bun": "bun scripts/generate-glob.ts && bun build ./src/index.ts --outdir ./dist --target bun --external abort-controller --external abortsignal --sourcemap",
    "prettier": "prettier --write 'src/**/*.ts'"
  },
  "dependencies": {
    "@bochilteam/scraper-savefrom": "^5.0.0",
    "@sparticuz/chromium": "^133.0.0",
    "@the-convocation/twitter-scraper": "^0.18.2",
    "@vercel/node": "^3.2.24",
    "@zip.js/zip.js": "^2.7.73",
    "archiver": "^7.0.1",
    "dotenv-cli": "^7.4.2",
    "grammy": "^1.38.2",
    "grammy-media-group": "^1.0.4",
    "instagram-url-direct": "^2.0.6",
    "jimp": "^1.6.0",
    "ofetch": "^1.4.1",
    "puppeteer": "^24.8.2",
    "puppeteer-core": "^24.8.2"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.5.7",
    "@types/archiver": "^6.0.3",
    "@types/debug": "^4.1.12",
    "@types/node": "^22.8.6",
    "@vercel/ncc": "^0.38.2",
    "debug": "^4.3.7",
    "nodemon": "^3.1.7",
    "prettier": "^3.3.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  }
}
