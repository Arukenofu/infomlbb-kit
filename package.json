    "instagram-url-direct": "^2.0.6",
    "jimp": "^1.6.0",
    "ofetch": "^1.4.1",
    "puppeteer": "^24.8.2",
    "puppeteer-core": "^24.8.2",
    "telegraf": "^4.16.3",
    "twitter-downloader": "^1.1.6"
  },
  "devDependencies": {
    "@types/debug": "^4.1.12",
    "@types/node": "^22.8.6",
    "@vercel/ncc": "^0.38.2",
    "debug": "^4.3.7",
    "nodemon": "^3.1.7",
